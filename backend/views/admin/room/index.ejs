<div class="form-container">
    <form class="form-row" action="/admin/manage-rooms" method="GET">
    <label>Search Room</label>
    <div class="search-form">
        <input type="number" name="roomNumber" placeholder="Room Number" value="<%= searchOptions.roomNumber %>">
    </div>
    <div class="search-form">
        <input type="number" name="dailyPriceMin" placeholder="Min Price" value="<%= searchOptions.dailyPriceMin %>">
    </div>
    <div class="search-form">
        <input type="number" name="dailyPriceMax" placeholder="Max Price" value="<%= searchOptions.dailyPriceMax %>">
    </div>
    <div class="search-form">
        <input type="number" name="capacity" placeholder="Room Capacity" value="<%= searchOptions.capacity %>">
    </div>
    <button class="btn btn-primary" type="submit">Search</button>
</form>
</div>

<br>

<div class="row">
    <% if(room.length == 0){ %>
        <div class="row">No rooms correspond to search parameters.</div>
    <%}else{%>
        <% room.forEach(room => { %>
            <div class="container">
                <img height="150" width="150" src="<%= room.photoPath %>">
                <div>Room Number <%= room.roomNumber %></div>
                <div>Daily Price: â‚¬ <%= room.dailyPrice %></div>
                <div>Capacity: <%= room.capacity %></div>
                <div>Available: <%= (room.isVacant ? "Yes" : "No") %></div>
                <a href="/admin/manage-rooms/<%= room.id %>">View</a>
                <a href="/admin/manage-rooms/<%= room.id %>/edit">Edit</a>
                <%- include('../../partials/deleteForm.ejs', { url: `/admin/manage-rooms/${room.id}` }) %>
            </div>
        <% }) %>
    <%}%>
</div>