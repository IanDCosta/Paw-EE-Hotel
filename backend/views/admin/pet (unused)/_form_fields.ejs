<!-- partial file! -->
<div class="form-row">
    <div class="form-item">
        <label>Name*</label>
        <input type="text" name="name" value="<%= pet.name %>">
    </div>

    <div class="form-item">
        <label>Category*</label>
        <select name="category">
            <% categories.forEach(category=> { %>
                <option label="<%= category %>" value="<%= category %>"></option>
            <% }) %>
        </select>
    </div>

    <div class="form-item">
        <label>Race</label>
        <input type="text" name="race" value="<%= pet.race %>">
    </div>

    <div class="form-item">
        <label>Special Care</label>
        <textarea name="specialCare"><%= pet.specialCare %></textarea>
    </div>

    <div class="form-item">
        <label>Owner*</label>
        <select name="owner">
            <% owners.forEach(owner=> { %>
                <% if(owner.id===pet.owner) { %>
                    <option selected label="<%= owner.name %>" value="<%= owner.id %>"></option>
                <% } else { %>
                        <option label="<%= owner.name %>" value="<%= owner.id %>"></option>
                <% } %>
            <% }) %>
        </select>
    </div>

    <div class="form-item">
        <label>Photo*</label>
        <input type="file" name="photo">
    </div>

    <div class="form-item">
        <label>Vaccine Card</label>
        <input type="text" name="vaccines">
    </div>
</div>