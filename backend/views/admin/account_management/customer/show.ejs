<div class="row">
    <div class="form-container">
        <h2>
            <%= customer.name %>
        </h2>
        <ul>
            <li>Email: <%= customer.email %>
            </li>
            <li>Contact: <%= customer.contact %>
            </li>
            <li>Address: <%= customer.address %>
            </li>
            </li>
            <li>State: <%= customer.state %>
            </li>
        </ul>
        <a href="/admin/manage-accounts/customer/<%= customer.id %>/edit">Edit</a>
        <%- include('../../../partials/deleteForm.ejs', { url: `/admin/manage-accounts/customer/${customer.id}` }) %>
    </div>
</div>
<!-- show customer resrevations? -->
<% if (reservationsByCustomer.length> 0) { %>
    <div class="row">
        <% reservationsByCustomer.forEach(reservation=> { %>
            <div class="container">
                <img height="150" width="150" src="<%= reservation.room.photoPath %>">
                <a href="/room/<%= reservation.id %>">
                    Reservation Code: <%= reservation.code %>
                <a>
            </div>
        <% }) %>
    </div>
<% } %>